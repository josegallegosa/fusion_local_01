<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_operator_type_id_tree" model="ir.ui.view">
            <field name="name">operator_type_id_tree</field>
            <field name="model">operator.type</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Tipo de Operadores">
                    <field name="name" />                  
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_operator_type_id_form" model="ir.ui.view">
            <field name="name">operator_type_id_form</field>
            <field name="model">operator.type</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Tipo de Operador">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Tipo Operador"/>
                            <h1><field name="name"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_operator_type_id_search" model="ir.ui.view">
            <field name="name">operator_type_id</field>
            <field name="model">operator.type</field>
            <field name="arch" type="xml">
                <search string="Tipo de Operador">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <group string="Agrupar por..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_operator_type_id_kanban" model="ir.ui.view" >
            <field name="name">operator_type_id</field>
            <field name="model">operator.type</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_operator_type_id_graph" model="ir.ui.view">
            <field name="name">operator_type_id</field>
            <field name="model">operator.type</field>
            <field name="arch" type="xml">
                <graph string="Tipo de Operador" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_operator_type_id" model="ir.actions.act_window">
            <field name="name">Tipo de Operador</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">operator.type</field>
            
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Tipo de Operador
                </p><p>
                Click the Create button to add a new Tipo de Operador
                </p>
            </field>
        </record>

        <menuitem id="settings_operator_type_id" name="Tipo de Operadores" action="action_operator_type_id" parent="savar_oms_pricelist.sub_settings_menuitem" sequence="101" />

    </data>
</odoo>
