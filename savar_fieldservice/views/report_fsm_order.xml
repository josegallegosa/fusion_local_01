<?xml version="1.0" encoding="utf-8"?>
    <odoo>   
        <data>

            <template id="report_fsm_order_savar" >
                <t t-call="web.basic_layout">
                    <div class="page" style="margin-top:0px;">
                        <style>
                            .titulo1 {
                                text-align:center;
                                font-size:16px;
                                margin: 0 0 20px 0;
                            }
                            .titulo1_2 {
                                width:100%;
                                text-align:center;
                                font-size:16px;
                            }
                            .barcode1 {
                                display: block;
                                margin-left: auto;
                                margin-right: auto;
                                width:500px;
                            }
                            .contenedor1{
                                width:100%;
                                margin: 200px 0 0 0;
                            }
                            .table1 {
                                width:100%;
                        
                            }
                            .table1_row_l {
                                /*width:40%;*/ 
                                text-align:left;
                                font-size:20px;
                            }
                            .table1_row_r {
                                /*width:60%;*/ 
                                text-align:left;   
                                font-size:14px;
                            }
                            .contenedor-imagenes {
                                width:100%;
                                display: flex;
                            }
                       
                        </style>
                        <div class="titulo1" style="background-color: #c4c4c3;">ORDEN DE TRABAJO - <span t-field="o.name"/></div>
                        <div class="titulo1_2">
                          <div class="barcode1">
                            <t t-if="o.name">
                                <img alt="Barcode" t-if="len(o.name) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(o.name or ''), 600, 150)" style="width:100%;height:4rem;"/>
                                <img alt="Barcode" t-elif="len(o.name) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(o.name or ''), 600, 150)" style="width:100%;height:4rem;"/>
                                <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(o.name or ''), 600, 150)" style="width:100%;height:4rem"/>
                                <span t-field="o.name"/>
                            </t>
                            <t t-else=""><span class="text-muted">No barcode available</span></t>
                          </div>
                        </div>
                        <div class="contenedor-imagenes">
                          <img t-attf-src="data:image/*;base64,{{request.env.user.company_id.logo}}" style="float: left; width:300px;height:120px;"/>
                          <img t-attf-src="data:image/*;base64,{{o.partner_channel.image_1920}}" style="float: right; width:300px;height:120px;"/>
                        </div>
                        <div class="contenedor1">
                            <table class="table1">
                              <tr>
                                <td class="table1_row_l"><b>Cod. Orden de Trabajo: </b></td>
                                <td class="table1_row_r"><span t-field="o.code_merchant"/></td>
                                <td colspan="2" class="text-center align-middle" style="height: 6rem;">
                                    <t t-if="o.code_merchant">
                                        <img alt="Barcode" t-if="len(o.code_merchant) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(o.code_merchant or ''), 600, 150)" style="width:100%;height:4rem;"/>
                                        <img alt="Barcode" t-elif="len(o.code_merchant) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(o.code_merchant or ''), 600, 150)" style="width:100%;height:4rem;"/>
                                        <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(o.code_merchant or ''), 600, 150)" style="width:100%;height:4rem"/>
                                        <span t-field="o.code_merchant"/>
                                    </t>
                                    <t t-else=""><span class="text-muted">No barcode available</span></t>
                                </td>
                              </tr>
                              <tr>
                                <td class="table1_row_l"><b>Destino: </b></td>
                                <td colspan="3" class="table1_row_r">LIMA | LIMA | LA MOLINA</td>
                              </tr>
                              <tr>
                                <td class="table1_row_l"><b>Consignado: </b></td>
                                <td colspan="3" class="table1_row_r">KARLA GOMEZ</td>
                              </tr>
                              <tr>
                                <td class="table1_row_l"><b>Dirección: </b></td>
                                <td colspan="3" class="table1_row_r">LAS MANDARINAS 126 DPTO 303 A UNA CUADRA DE AV SEPARADORA Y AV LA MOLINA - MERCHANT FLEET</td>
                              </tr>
                              
                              <tr>
                                <td class="table1_row_l"><b>Cliente: </b></td>
                                <td colspan="3" class="table1_row_r">SIMPLE EXPRESS SAC</td>
                              </tr>

                              <tr>
                                <td class="table1_row_l"><b>Pago/Subservicio: </b></td>
                                <td class="table1_row_r">PREPAGADO/ NEXT DAY</td>
                                <td class="table1_row_l"><b>Fecha: </b></td>
                                <td class="table1_row_r">2022-02-09</td>
                              </tr>
                              <tr>
                                <td class="table1_row_l"><b>Cod. Paq: </b></td>
                                <td class="table1_row_r">210708000296-001_LI</td>
                                <td class="table1_row_l"><b>Peso(kg): </b></td>
                                <td class="table1_row_r">1.0000</td>
                              </tr>  

                              <tr>
                                <td class="table1_row_l"><b>Cliente: </b></td>
                                <td colspan="3" class="table1_row_r">SIMPLE EXPRESS SAC</td>
                              </tr>

                              <tr>
                                <td class="table1_row_l"><b>E-Commerce: </b></td>
                                <td class="table1_row_r">JUNTOZ</td>
                                <td class="table1_row_l"><b>Cant: </b></td>
                                <td class="table1_row_r">1/1</td>
                              </tr>  

                              <tr>
                                <td class="table1_row_l"><b>Canal de Venta: </b></td>
                                <td colspan="3" class="table1_row_r">Canal_1</td>
                              </tr>

                              <tr>
                                <td class="table1_row_l"><b>Bodega Asignada: </b></td>
                                <td colspan="3" class="table1_row_r">Bodega_1</td>
                              </tr>

                              <tr>
                                <td class="table1_row_l"><b>Código de Bulto: </b></td>
                                <td colspan="3" class="table1_row_r">Cod0001</td>
                              </tr>        

                              <tr>
                                  <th class="table-active text-left" style="height: 4rem;">
                                      <strong>Cod. Orden de trabajo</strong>
                                  </th>
                              </tr>
                              
                            </table>
                        </div>
                    
                    </div>
                </t>
             </template>

                <template id="report_fsm_order">
                    <t t-call="web.html_container">
                        <t t-foreach="docs" t-as="o">
                            <t t-call="savar_fieldservice.report_fsm_order_savar"/>                    
                        </t>
                    </t>
                </template>
                  
                <report
                    id="fsm_order_savar_file"
                    model="fsm.order"
                    string="Orden de Trabajo"
                    report_type="qweb-pdf"
                    name="savar_fieldservice.report_fsm_order"
                    file="savar_fieldservice.report_fsm_order"
                />
        </data>
    </odoo>
