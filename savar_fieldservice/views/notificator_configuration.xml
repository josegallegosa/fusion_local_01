<odoo>
    <!-- tree view -->
    <record id="notificator_config_tree" model="ir.ui.view">
        <field name="name">Notificador de Campos de Trabajo Tree</field>
        <field name="model">notificator.configurator</field>
        <field name="type">tree</field>        
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name" />
                <field name="_models_001" />
            </tree>
        </field>
    </record>
    <!-- form view -->
    <record id="notificator_config_form" model="ir.ui.view">
        <field name="name">Notificador de Campos de Trabajo Form</field>
        <field name="model">notificator.configurator</field>     
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Notificador de Campos de Trabajo" create="false" class="form_business_report">
                <header>                    
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Nombre"/>
                        <h1><field name="name"/></h1>
                    </div>                    
                    <group> 
                        <field name="_stages_ids"  widget="One2many">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                        <field name="_models_001" widget="Many2one"/>
                        <field name="_fields_001" widget="One2many"><!-- domain="[['_models_001','=',_fields_001.model_id]]" -->
                            <tree>
                                <field name="name"/>
                                <field name="model_id"/>
                            </tree>
                        </field>
                    </group>  
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_notificator_config_kanban" model="ir.ui.view" >
        <field name="name">notificator.configurator</field>
        <field name="model">notificator.configurator</field>
        <field name="arch" type="xml">
            <kanban version="7.0">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details">
                                <h4>
                                    <i class="fa fa-file" title="Abierto"></i>  <a type="open"><field name="name"/></a>
                                </h4>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_notificator_config" model="ir.actions.act_window">
        <field name="name">Reportes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">notificator.configurator</field>
        <field name="view_mode">tree,kanban,form</field>       
    </record>  

    <menuitem id="menu_notificator_config"
                name="Configurador de Notificaciones" action="action_notificator_config"
                parent="savar_oms_pricelist.sub_settings_menuitem" sequence="50" />

</odoo>