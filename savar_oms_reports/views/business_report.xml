<odoo>
    <!-- tree view -->
    <record id="busines_reports_tree" model="ir.ui.view">
        <field name="name">Reportes Ordenes de Trabajo Tree</field>
        <field name="model">business.reports</field>
        <field name="type">tree</field>        
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name" />
            </tree>
        </field>
    </record>
    <!-- form view -->
    <record id="busines_reports_form" model="ir.ui.view">
        <field name="name">Reportes Ordenes de Trabajo Form</field>
        <field name="model">business.reports</field>     
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Reportes Ordenes de Trabajo" create="false" class="form_business_report">
                <header>                    
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                      <button type="object" name="generate_financial_report" icon="fa-file-pdf-o"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Nombre"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>                    
                    <group> 
                        <group>
                            <h5><i class="fa fa-calendar"/> Fecha Creación</h5>
                            <field name="start_create_date"/>
                            <field name="ends_create_date"/>
                        </group> 
                        <group>
                            <h5><i class="fa fa-calendar"/> Ejecución - Comienzo Real</h5>
                            <field name="date_start_scheduled_date_start"/>
                            <field name="date_ends_scheduled_date_start"/>
                        </group> 
                    </group>  
                    <group>
                        <h5><i class="fa fa-cubes"/> Ubicaciones</h5>
                        <field name="location_id" class="location_id_report">
                            
                                <tree>                            
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="contact_id"/>                                                         
                                </tree>
                            
                        </field>
                    </group> 
                    <group>  
                        <group>
                            <h5><i class="fa fa-user"/> Perfiles</h5>
                            <field name="consigned_id" widget="many2many" domain="[['type','=','contact']]">
                                <tree create="0">
                                    <field name="name"/>
                                </tree>
                            </field>
                            <field name="partner_account" widget="many2many">
                                <tree create="0">
                                    <field name="name"/>
                                </tree>
                            </field>
                            <field name="partner_channel" widget="many2many">
                                <tree create="0">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>                                                                        
                        <group>
                            <h5><i class="fa fa-archive"/> Servicios</h5>
                            <field name="service_id" widget="many2many" domain="[['parent_id', '=', None]]">
                                <tree create="0">
                                    <field name="name"/>
                                </tree>
                            </field>
                            <field name="subservice_id" widget="many2many" domain="[['parent_id', '!=', None],['parent_id', '=', service_id]]">
                                <tree create="0">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>    
                                          
                        <group>
                            <h5><i class="fa fa-history"/> Campos de Trabajo</h5>

                            <field name="display_code_merchant"/>
                            <field name="display_scheduled_date_start"/>
                            <field name="display_partner_account"/>
                            <field name="display_partner_channel"/>
                            <field name="display_service"/>
                            <field name="display_subservice"/>
                            <field name="display_consigned_id"/>
                            <field name="display_location_id"/>
                        </group> 
                                               
                    </group>
                    <group>
                        <group>
                            <h5><i class="fa fa-file" title="Control de tiempo para servidores"/> Delta</h5>
                             <field name="timedelta_type"/>
                             <field name="timedelta_number"/>
                        </group>                         
                        <group>
                            <h5><i class="fa fa-file" title="Opciones de Reportes"/> Reporte</h5>
                             <field name="clean_form"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_business_reports_kanban" model="ir.ui.view" >
        <field name="name">business.reports</field>
        <field name="model">business.reports</field>
        <field name="arch" type="xml">
            <kanban version="7.0">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details">
                                <h4>
                                    <i class="fa fa-file" title="Abierto"></i>  <a type="open"><field name="name"/></a>
                                </h4>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_business_reports" model="ir.actions.act_window">
        <field name="name">Reportes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">business.reports</field>
        <field name="view_mode">kanban,form</field>       
    </record>  

</odoo>